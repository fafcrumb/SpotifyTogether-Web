{
  "name": "spotify-together",
  "version": "1.0.0",
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-google": "^0.7.0",
    "eslint-plugin-html": "^2.0.0"
  },
  "scripts": {
    "lint": "eslint . --ext js,html --ignore-path .gitignore",
    "test": "npm run lint && polymer test -l chrome",
    "polyserve": "polymer serve -p 8080",
    "polyserve-build": "polymer serve build/default -p 8080",    
    "serve": "npm run polyserve & npm run watch",
    "serve-build": "npm run polyserve-build & npm run watch",
    "watch": "browser-sync start --proxy 127.0.0.1:8080 --no-open --files 'index.html, src/**/*.html, *.json, images/*'",
    "build": "npm run lint && polymer build"
  }
}